<div class="modalOverlay">
    <div class="modal">
        <div class="form">
            <h2>Nova Transação</h2>
            <form action="" onsubmit="Form.submit(event)">
                <div class="inputGroup">
                    <label for="description" class="srOnly">Descrição</label>
                    <input 
                        type="text" 
                        id="description" 
                        name="description"
                        placeholder="Descrição" />
                </div>
                <div class="inputGroup">
                    <label for="amount" class="srOnly">Valor</label>
                    <input 
                        type="number" 
                        step="0.1"
                        id="amount" 
                        name="amount"
                        placeholder="0,00" />
                    <small class="help">Use o sinal '-' (negativo) para despesas e ',' (vírgula) para casas decimais</small>
                </div>
                <div class="inputGroup">
                    <label for="date" class="srOnly">Data</label>
                    <input 
                        type="date" 
                        id="date" 
                        name="data"
                        placeholder="01/02/2021"/>
                </div>
                <div class="inputGroup actions">
                    <a 
                        href="#" 
                        class="button cancel"
                        onclick="Modal.toggle()">Cancelar</a>
                    <button>Salvar</button>
                </div>
            </form>
        </div>
    </div>
</div>